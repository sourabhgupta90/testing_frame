from reportlab.lib.styles import getSampleStyleSheet
from reportlab.platypus import *
from reportlab.lib import colors
from reportlab.lib.styles import ParagraphStyle as PS
 
# Our container for 'Flowable' objects
elements = []
 
# A large collection of style sheets pre-made for us
styles = getSampleStyleSheet()

style = styles["BodyText"]

# A basic document for us to write to 'rl_hello_table.pdf'
doc = SimpleDocTemplate('table_test.pdf')

h3 = PS(name='Heading2',
        wordwrap=1,
        fontSize=10,
        leading=12)

p = Paragraph("<b>The Platypusadsfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff</b>", style)

data = [['Top\nLeft', '',p, '03', '04'],
        ['', '', '12', '13', '14'],
        ['20', '21', '22', 'Bottom\nRight', ''],
        ['30', '31', '32', '', '']
       ]
       
       
t=Table(data,style=[
                    ('GRID',(0,0),(-1,-1),0.5,colors.grey),
                    ('BACKGROUND',(0,0),(1,1),colors.palegreen),
                    ('SPAN',(0,0),(1,1)),
                    ('BACKGROUND',(-2,-2),(-1,-1), colors.pink),
                    
                    ]
       )


elements.append(t)
 
# Write the document to disk
doc.build(elements)
